			<AccuracyShort>0.90</AccuracyShort>
			<AccuracyMedium>0.95</AccuracyMedium>
			<AccuracyLong>0.86</AccuracyLong>
			<RangedWeapon_Cooldown>0.75</RangedWeapon_Cooldown>
		</statBases>
