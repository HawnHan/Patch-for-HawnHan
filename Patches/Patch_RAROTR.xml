<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rails and Roads of the Rim</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RoadDef[defName="GlitterRoad"]/modExtensions/li[@Class="RoadsoftheRim.DefModExtension_RotR_RoadDef"]/costs/Stone</xpath>
					<value>
						<Stone>900</Stone>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/RoadDef[defName="GlitterRoad"]/modExtensions/li[@Class="RoadsoftheRim.DefModExtension_RotR_RoadDef"]/costs/Steel</xpath>
					<value>
						<Steel>3600</Steel>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>